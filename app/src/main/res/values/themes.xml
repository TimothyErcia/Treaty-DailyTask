<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.DailyTask" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:textColor">@color/fontColorLight</item>
        <item name="android:fontFamily">@font/kufam</item>
        <item name="fontFamily">@font/kufam</item>

        <item name="background">@color/backgroundColor</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.DailyTask" parent="Base.Theme.DailyTask" />

    <style name="bottom_textStyle">
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="deletebtn_style">
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="input_style">
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="Theme.DailyTask.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DailyTask.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DailyTask.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>